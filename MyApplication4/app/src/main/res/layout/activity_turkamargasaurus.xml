<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kahaki"
    tools:context=".turkamargasaurusActivity">

    <include
        layout="@layout/actionbar_app"
        android:id="@+id/actionbarturkamarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbarturkamarga">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <ImageView
                android:id="@+id/resim38"
                android:layout_width="match_parent"
                android:layout_height="335dp"
                android:layout_below="@id/actionbarturkamarga"
                android:layout_marginTop="0dp"
                android:src="@drawable/amargasaurus" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blg9"
                android:text="Amargasaurus, Barremian'a ve Erken Kretase'nin Aptian geç evrelerine kadar uzanan La Amarga Formasyonu'nun tortul kayaçlarında keşfedilmiştir. Bir cimri, çevresini, rekabeti azaltmak için farklı gıda kaynaklarından istifade etmiş olabilecek en az üç başka sauropod cinsle paylaştı. Amargasaurus muhtemelen iç kulağının oryantasyonu ve boyun omurlarının eklemlenmesi ile gösterildiği gibi orta yükseklikte beslenir; bu, zeminin 80 santimetre (31 inç) üzerindeki alışılmış bir pozisyonu ve maksimum 2.7 metre yüksekliğinde 8,9 feet). Sauropoda'da Amargasaurus, daha kısa boyunları ve daha küçük vücut boyutlarını göstermesi bakımından diğer sauropodlardan farklı olan Dicraeosauridae ailesinin bir üyesi olarak sınıflandırılır."
                android:layout_marginTop="15dp"
                android:textColor="@color/crimson"
                android:textStyle="italic"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amargasaurus Sesi:"
                android:textColor="@color/crimson"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="sesi dinle"
                android:id="@+id/Bt94"
                android:layout_marginTop="10dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-48sp"
                android:id="@+id/Bt95"
                android:text="kapat"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="-48sp"
                android:id="@+id/Bt96"
                android:text="beklet"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>