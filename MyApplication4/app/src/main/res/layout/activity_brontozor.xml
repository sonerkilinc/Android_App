<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kahaki"
    tools:context=".brontozorActivity">

    <include
        layout="@layout/actionbar_app"
        android:id="@+id/actionbarbrontozor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbarbrontozor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <ImageView
                android:id="@+id/resim38"
                android:layout_width="match_parent"
                android:layout_height="335dp"
                android:layout_below="@id/actionbarbrontozor"
                android:layout_marginTop="0dp"
                android:src="@drawable/brontozor" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Although B. excelsus has long been regarded as a species of closely related Apatosaurus, researchers in 2015 suggested that Brontosaurus was a distinct genus from Apatosaurus and contained three species: B. excelsus, B. yahnahpin and B. parvus.Brontosaurus had a long, thin neck and a small head adapted for a herbivorous lifestyle; a bulky, heavy body; and a long, whip-like tail. Various species that lived during the Late Jurassic period in Morrison Format, which is now North America, have been extinct by the end of the Jurassic."
                android:id="@+id/blg8"
                android:layout_marginTop="15dp"
                android:textColor="@color/crimson"
                android:textStyle="italic"
                android:textSize="15sp"
                />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>