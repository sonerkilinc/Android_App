<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/kahaki"
    android:layout_height="match_parent"
    tools:context=".TurkcarnotaurusActivity">

    <include
        layout="@layout/actionbar_app"
        android:id="@+id/actionbarturkcarnotaurus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbarturkcarnotaurus">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <ImageView
                android:id="@+id/resim38"
                android:layout_width="match_parent"
                android:layout_height="335dp"
                android:layout_below="@id/actionbarturkcarnotaurus"
                android:layout_marginTop="0dp"
                android:src="@drawable/carnotaurus" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carnotaurus muazzam bir etoburdu. Çukurun bir kafatası vardı ve kısa boynuzu gözlerinin hemen üstünde. Uzun ve kaslı bacakları avından daha hızlıydı. 9 metre uzunluğunda ve 3,5 metre yüksekliğinde olabilirler. Avını tek hamlede yiyebilecek keskin dişleri vardı. Çok tehlikeli ve asil bir dinozordu."
                android:id="@+id/blg1"
                android:layout_marginTop="15dp"
                android:textColor="@color/crimson"
                android:textStyle="italic"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carnotaurus Sesi:"
                android:textColor="@color/crimson"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="sesi dinle"
                android:id="@+id/Bt55"
                android:layout_marginTop="10dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-48sp"
                android:id="@+id/Bt56"
                android:text="kapat"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="-48sp"
                android:id="@+id/Bt57"
                android:text="beklet"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>